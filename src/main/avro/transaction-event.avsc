{
  "namespace": "com.harpreetsaund.transaction.avro",
  "type": "record",
  "name": "TransactionEvent",
  "fields": [
    {
      "name": "headers",
      "type": {
        "type": "record",
        "name": "EventHeaders",
        "fields": [
          {
            "name": "eventId",
            "type": "string",
            "doc": "Unique ID for traceability"
          },
          {
            "name": "sourceSystem",
            "type": "string",
            "doc": "Source system identifier (e.g., MQ, FILE, KAFKA)"
          },
          {
            "name": "targetSystem",
            "type": "string",
            "doc": "Target system identifier"
          },
          {
            "name": "topicName",
            "type": "string",
            "doc": "Kafka topic name for routing"
          },
          {
            "name": "eventType",
            "type": "string",
            "doc": "Type of event or data (e.g., CustomerCreated, FileUpload, etc.)"
          },
          {
            "name": "timestamp",
            "type": "long",
            "doc": "Epoch timestamp of message creation"
          },
          {
            "name": "payloadSchemaVersion",
            "type": "string",
            "doc": "Version of the payload schema"
          }
        ]
      }
    },
    {
      "name": "payload",
      "type": {
        "type": "record",
        "name": "EventPayload",
        "fields": [
          {
            "name": "transactionId",
            "type": "string"
          },
          {
            "name": "accountId",
            "type": "string"
          },
          {
            "name": "amount",
            "type": "double"
          },
          {
            "name": "currency",
            "type": "string"
          },
          {
            "name": "timestamp",
            "type": "long"
          }
        ]
      }
    }
  ]
}
